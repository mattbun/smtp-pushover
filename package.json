{
  "name": "smtp-pushover",
  "version": "0.1.0",
  "main": "dist/index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "debug": "node --inspect-brk dist/index.js",
    "test": "jest --passWithNoTests"
  },
  "dependencies": {
    "mailparser": "^3.0.1",
    "pushover-notifications": "^1.2.2",
    "smtp-server": "^3.8.0"
  },
  "devDependencies": {
    "@types/jest": "29.0.3",
    "@types/mailparser": "3.4.0",
    "@types/node": "16.11.62",
    "@types/smtp-server": "3.5.7",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "cz-conventional-changelog": "3.3.0",
    "jest": "29.0.3",
    "semantic-release": "19.0.5",
    "ts-jest": "29.0.2",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
